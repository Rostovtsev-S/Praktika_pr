#include <iostream>
#include "Header1.h"
using namespace std;

int main()
{
	
	int zodiac, day, month;                                            // Инициализируем переменные zodiac, day, month
    cout << "Введите день: ";
	cin >> day;                                                        // Вводим значение день
	cout << "Введите месяц: ";
	cin>> month;                                                       // Вводим значение месяц
	zodiac = 100 * month + day;                                        // Умножаем 100 на месяц и прибавляем день

	if (zodiac >= 121 && zodiac <= 219)   cout << "Водолей\n";         // если переменная zodiac больше или равна 121 и меньше или равна 219 то выводит "Водолей"
	if (zodiac >= 220 && zodiac <= 320)   cout << "Рыбы\n";            // если переменная zodiac больше или равна 220 и меньше или равна 320 то выводит "Рыбы" 
	if (zodiac >= 321 && zodiac <= 420)   cout << "Овен\n";            // если переменная zodiac больше или равна 321 и меньше или равна 420 то выводит "Овен"
	if (zodiac >= 421 && zodiac <= 521)   cout << "Телец\n";           // если переменная zodiac больше или равна 421 и меньше или равна 521 то выводит "Телец"
	if (zodiac >= 522 && zodiac <= 621)   cout << "Близнецы\n";        // если переменная zodiac больше или равна 522 и меньше или равна 621 то выводит "Близнецы"
	if (zodiac >= 621 && zodiac <= 722)   cout << "Рак\n";             // если переменная zodiac больше или равна 621 и меньше или равна 722 то выводит "Рак"
	if (zodiac >= 723 && zodiac <= 823)   cout << "Лев\n";             // если переменная zodiac больше или равна 723 и меньше или равна 823 то выводит "Лев"
	if (zodiac >= 824 && zodiac <= 923)   cout << "Дева\n";            // если переменная zodiac больше или равна 824 и меньше или равна 923 то выводит "Дева"
	if (zodiac >= 924 && zodiac <= 1023)  cout << "Весы\n";            // если переменная zodiac больше или равна 924 и меньше или равна 1023 то выводит "Весы"
	if (zodiac >= 1024 && zodiac <= 1122) cout << "Скорпион\n";        // если переменная zodiac больше или равна 1024 и меньше или равна 1122 то выводит "Скорпион"
	if (zodiac >= 1123 && zodiac <= 1221) cout << "Стрелец\n";         // если переменная zodiac больше или равна 1123 и меньше или равна 1221 то выводит "Стрелец"
	if (zodiac >= 1222 || zodiac <= 120)  cout << "Козерог\n";         // если переменная zodiac больше или равна 1222 или меньше или равна 120 то выводит "Козерог"
	system("pause");
	return 0;
}
